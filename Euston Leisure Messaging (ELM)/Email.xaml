        mc:Ignorable="d"
        Title="Email" Height="533.185" Width="433.98">
    <Grid>
        <Label Content="Please enter your email below" HorizontalAlignment="Left" Margin="54,10,0,0" VerticalAlignment="Top" Height="61" Width="307" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="email_Input" HorizontalAlignment="Left" Height="53" Margin="54,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="307" SpellCheck.IsEnabled="True" FontSize="16"/>
