        <Label Content="Email Subject" HorizontalAlignment="Left" Margin="54,250,0,0" VerticalAlignment="Top" Width="214" Height="50" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="subjectInput" HorizontalAlignment="Left" Height="46" Margin="54,284,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" FontSize="14"/>
        <Label Content="(Max 20 Characters)" HorizontalAlignment="Left" Margin="180,253,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
